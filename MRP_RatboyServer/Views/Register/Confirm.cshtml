
@{
    ViewBag.Title = "Confirm";
}

<br /><br />
<div class="alert alert-warning" id="previous">
    <strong>Confirma tu cuenta</strong>
    <input type="submit" class="btn btn-warning" value="Confirm" onclick="Verified()"/>
</div>
<div class="alert alert-success" id="after" style="display:none">
    <strong><span class="glyphicon glyphicon-ok"></span> Tu cuenta ya se encuentra activa</strong>
</div>

<script>
    function Verified() {
        $.ajax({
            type: "post",
            url: "/Register/RegisterConfirm",
            data: { 'regId': '@ViewBag.regId' },
            success: function (msg) {
                $("#previous").hide();
                $("#after").show();
                alert(msg);
            }
        })
    }
</script>